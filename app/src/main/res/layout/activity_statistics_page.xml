<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsPage"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@id/toolbar"
        layout="@layout/toolbar"/> <!--Toolbar-->

    <TextView
        android:id="@+id/statsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/statsTitle"
        android:textSize="36sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/donationCountLabel"
                android:text="@string/donationCountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:textSize="15sp"/>


            <EditText
                android:id="@+id/donationCountET"
                android:layout_width="150dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:ems="10"
                android:importantForAutofill="no"
                android:textSize="15sp"
                tools:ignore="LabelFor"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/charitiesCountLabel"
                android:text="@string/charitiesCountLabel"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:importantForAutofill="no"
                android:textSize="15sp"/>


            <EditText
                android:id="@+id/charitiesCountET"
                android:inputType="number"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:ems="10"
                android:importantForAutofill="no"
                android:textSize="15sp"
                tools:ignore="LabelFor"/>

        </LinearLayout>

</LinearLayout>